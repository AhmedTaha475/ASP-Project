@model ASP_Project_BLL.Model.EditRoleVM
@{
    ViewData["Title"] = "EditRole";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<h1>Edit Role</h1>

<br />
<br />

<form asp-controller="Role" asp-action="EditRole">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <br />
    <div class="form-group">
        <label> Enter Role Name</label>
        <input asp-for="RoleName" class="form-control" />
        <span asp-validation-for="RoleName" class="text-danger"></span>
    </div>





    <center>
        <button type="submit" class="btn btn-primary"> Edit</button>
        <a class="btn btn-info" asp-controller="Role" asp-action="Index"> Back</a>
    </center>

    <br /><br />

</form>


