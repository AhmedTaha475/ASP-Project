@model IEnumerable<ASP_Project_BLL.Model.DepartmentVM>
@{
    ViewData["Title"] = "Index";

}


<a  asp-controller="Department" asp-action="CreateDepartment" class="btn btn-primary">Create New Department</a>
<br />
<br />
<table id="example" class="display" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Department Name</th>
            <th>Department Code</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.DepartmentName</td>
                <td>@item.DepartmentCode</td>
                <td><a class="btn btn-success"  asp-controller="Department" asp-action="Details" asp-route-id="@item.Id">Details</a></td>
                <td><a class="btn btn-info"  asp-controller="Department" asp-action="Edit" asp-route-id="@item.Id">Edit</a></td>
                <td><a class="btn btn-danger"  asp-controller="Department" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                

            </tr>
        }
    </tbody>
</table>


@section DataTable {
    <script src="~/js/datatables.min.js"></script>

    <script>

        $(document).ready(function () {
            $('#example').DataTable({

                "lengthMenu": [[5, 10, 15, -1], [5, 10, 15, "All"]]
            });
        });
    </script>
}
