@model ASP_Project_BLL.Model.EmployeeVM
 
@{
    ViewData["Title"] = "Details";
    
}

<h1>Employee Details</h1>


<br />
<br />


<div>
    <img src="~/Files/Photos/@Model.PhotoName" width="250" height="250" class="rounded" alt="Profile Picture" />
</div>
<br />
<div>
    <a href="~/Files/Docs/@Model.CvName" download="Current Cv">Download Cv</a>
</div>
<br />
<div class="form-group">
    <label>Employee Name</label>
    <input type="text" readonly asp-for="Name" class="form-control" />

</div>
<br />
<div class="form-group">
    <label>Employee Salary</label>
    <input type="text" readonly asp-for="salary" class="form-control" />

</div>

<br />
<div class="form-group">
    <label>Employee Email</label>
    <input type="email" readonly asp-for="Email" class="form-control" />

</div>

<br />
<div class="form-group">
    <label>Employee HireDate</label>
    <input type="date" readonly asp-for="HireDate" class="form-control" />

</div>

<br />
<div class="form-group">
    <label>Employee Address</label>
    <input type="text" readonly asp-for="Address" class="form-control" />

</div>

<br />
<div class="form-group">
    <label>Employee Notes</label>
    <textarea asp-for="Notes" readonly class="form-control"></textarea>

</div>

<br />
<div class="demo-checkbox">
    <input disabled type="checkbox" asp-for="IsActive" />
    <label>Is Active</label>
</div>

<br />
<div class="form-group">
    <label>Department</label>
    <input asp-for="@Model.Department.DepartmentName" class="form-control" readonly />
</div>




<br />
<div class="form-group">
    <label>District</label>
    <input asp-for="@Model.District.DistrictName" readonly class="form-control" />
</div>

<br />





<center>
    <a  asp-controller="Employee" asp-action="Index" class="btn btn-info"> Back</a>
</center>

<br />
<br />





