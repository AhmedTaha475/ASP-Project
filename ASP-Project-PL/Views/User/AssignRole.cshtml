@model  ASP_Project_BLL.Model.UserVM
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Layout/MainLayout.cshtml";
}

<h2>Assing User to a Role</h2>
<form asp-controller="User" asp-action="AssignRole" method="post">
    <input type="hidden" asp-for="Id" />
    <div asp-validation-summary="All" class="text-danger"></div>
    <br />
    <input type="email" readonly asp-for="UserName" class="form-control" />
    <br />
    <h3>This User is also Assigned to these Roles</h3>
    @foreach (var item in ViewBag.MyRoles)
    {
        <ol>
            <li>@item</li>
        </ol>

    }
    <br /><br />
    <select asp-for="RoleName" class="form-control" asp-items="(SelectList)ViewBag.Roles">
        <option> Choose Role </option>

    </select>
    <br /><br />
    <button type="submit" class="btn btn-primary"> Add</button>
    <a  class="btn btn-info" asp-controller="User" asp-action="Index"> Back</a>
    <br />
    <br />
</form>

